{
  "name": "listeningserver",
  "version": "1.0.0",
  "description": "",
  "main": "main.js",
  "bin": "/src/app/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node index.js",
    "dev": "nodemon index.js",
    "electron": "electron .",
    "build:electron": "npx electron-builder",
    "build:pkg": "pkg . --targets node16-win-x64",
    "git:update": "git pull && npm i",
    "postinstall": "electron-builder install-app-deps"
  },
  "pkg": {
    "assets": [
      "dist/**/*",
      "src/**/*"
    ],
    "outputPath": "build"
  },
  "build": {
    "appId": "com.stevlab.lisserverapp",
    "productName": "LisServerApp",
    "directories": {
      "output": "dist2"
    },
    "files": [
      "**/*"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "basic-ftp": "^5.0.5",
    "bl": "^6.0.16",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "express": "^4.21.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemon": "^3.1.7",
    "serialport": "^12.0.0",
    "socket.io": "^4.8.0",
    "winston": "3.15.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "electron-packager": "^17.1.2"
  }
}