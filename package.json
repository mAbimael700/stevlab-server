{
  "name": "stevlablisserver",
  "version": "1.0.0",
  "description": "",
  "main": "main.js",
  "bin": "./src/app/app.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node ./src/app/app.js",
    "start:local": "cross-env PRODUCTION_MODE=local node ./src/app/app.js",
    "dev:local": "cross-env PRODUCTION_MODE=local nodemon ./src/app/app.js",
    "start:electron": "cross-env PRODUCTION_MODE=electron electron ./main.js",
    "build:electron": "npx electron-builder",
    "build:pkg": "pkg . --targets node18-win-x64 --output build/app",
    "git:update": "git pull && npm i",
    "postinstall": "electron-builder install-app-deps"
  },
  "pkg": {
    "assets": [
      "dist/**/*",
      "src/**/*",
      ".env",
      "node_modules/ffi-napi/**/*",
      "node_modules/ref-napi/**/*"
    ],
    "outputPath": "build"
  },
  "build": {
    "appId": "com.stevlab.stevlablisserver",
    "productName": "Stevlab Lis Server",
    "directories": {
      "output": "dist2"
    },
    "files": [
      "**/*"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "keywords": [],
  "author": "Abimael Alexander MÃ©ndez Landero",
  "license": "ISC",
  "dependencies": {
    "@dotenvx/dotenvx": "1.29.0",
    "basic-ftp": "5.0.5",
    "bl": "6.0.16",
    "console-table-printer": "2.12.1",
    "cors": "2.8.5",
    "date-fns": "4.1.0",
    "express": "4.21.0",
    "ffi-napi": "4.0.3",
    "morgan": "1.10.0",
    "multer": "1.4.5-lts.1",
    "nodemon": "3.1.7",
    "ref-napi": "3.0.3",
    "serialport": "12.0.0",
    "socket.io": "4.8.0",
    "winston": "3.15.0",
    "winston-daily-rotate-file": "5.0.0",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "cross-env": "7.0.3",
    "electron": "33.2.1",
    "electron-builder": "25.1.8",
    "electron-packager": "17.1.2",
    "pkg": "5.8.1"
  }
}